{
  "name": "pm-apps",
  "version": "1.0.0",
  "description": "Mono repo for PM apps",
  "scripts": {
    "commitlint": "pnpm commitlint --edit",
    "postinstall": "node ./scripts/setup-repo.mjs",
    "lint": "eslint serverless/**/*.{js,jsx,ts,tsx,css}",
    "build": "tsc",
    "deploy-to-netlify": "nx affected -t deploy-to-netlify --exclude=*,!frontend/apps/* --base=HEAD~1 --verbose --STAGE=dev",
    "build:watch": "tsc -watch"
  },
  "keywords": [
    "Partner Marketplace",
    "Apps"
  ],
  "author": "Cloudify",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.7.0",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "eslint": "~9.7.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "nx": "19.5.1",
    "prettier": "2.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.3",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.16.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,yaml,json,html,mjs,cjs}": [
      "prettier --write"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.3.1",
      "react-bootstrap": "2.10.2"
    }
  },
  "private": true
}
